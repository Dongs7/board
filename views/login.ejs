<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/head %>
</head>
<body>
  <% include ./partials/navbar %>
  <% include ./partials/header %>

  <div class="container main">
    <hr class='row'>
    <div class="login_wrapper">


      <form class="form-signin" action="/login" method="post">
        <h2 class="form-signin-heading text_center">Member Sign In</h2>
        <% if (message.length > 0) {%>
            <div class="alert alert-danger text_center"><%- message%></div>
        <%}%>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputusername" class="form-control" name="email" placeholder="Email address" required autofocus>

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
        <div class="empty_row"></div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

      <div class="empty_row"></div>
      <p class="text_center">- OR -</p>
      <div class="empty_row"></div>

      <h4 class="text_center">Log In with Social Account</h4>
      <hr>

      <div class="social_wrapper text_center"> <!--Passport social authenticate is needed.-->
        <a href="/auth/facebook"><button class="btn btn-lg btn-social-icon btn-facebook"><span class="fa fa-facebook"></span></button></a>
        <a href="/auth/github"><button class="btn btn-lg btn-social-icon btn-github"><span class="fa fa-github"></span></button></a>
        <a href="/auth/google"><button class="btn btn-lg btn-social-icon btn-google"><span class="fa fa-google"></span></button></a>
      </div>

      <div class="ask text_center">
        <hr>
        <span class="text_center">Don't have an account? <a href="/user/signup">Click here to create one!</a></span>
      </div>



    </div>

  </div>

</body>
</html>
